<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.nba.darko.myapplication.fantasy.nba.darko.myapplication.MainActivity"
    android:layout_alignParentTop="false"
    android:layout_alignParentStart="false"
    android:layout_alignParentRight="false"
    android:layout_alignParentLeft="false"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:text="Small Forward #1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/button1"
                android:layout_weight=".15"
                android:layout_marginTop="5dp"
                android:backgroundTint="@android:color/background_light"
                android:onClick="player1"/>

            <Button
                android:text="Small Forward #2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/button2"
                android:layout_weight=".15"
                android:layout_marginTop="5dp"
                android:elevation="0dp"
                android:backgroundTint="@android:color/background_light"
                android:onClick="player2"/>

            <Button
                android:text="Small Forward #3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/button3"
                android:layout_weight=".15"
                android:layout_marginTop="5dp"
                android:backgroundTint="@android:color/background_light"
                android:onClick="player3"/>

            <Button
                android:text="Small Forward #4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/button4"
                android:layout_weight=".15"
                android:layout_marginTop="5dp"
                android:backgroundTint="@android:color/background_light"
                android:onClick="player4"/>

            <Button
                android:text="Advance to Power Forwards"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/button5"
                android:layout_weight=".155"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:textColor="@android:color/background_light"
                android:elevation="22dp"
                android:backgroundTint="@color/submit"
                android:onClick="Advance"
                android:textStyle="normal|bold" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
